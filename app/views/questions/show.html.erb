<h1><%= "#{@question.title}" %></h1>

<div class="row">
    <div class="col-md=8">
        <p><%= @question.body %></p>
    </div>
    <p> Resolved: <%= @question.resolved %> </p>
</div>

<div class="col-md-4">
    <%= link_to "edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Sure?'} %>
</div>
